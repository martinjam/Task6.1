<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecyclerView"
        android:layout_width="389dp"
        android:layout_height="476dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/addFoodImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTextView" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="287dp"
        android:layout_height="64dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:text="Discover free food"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/foodRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addFoodImageView"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_marginStart="317dp"
        android:layout_marginBottom="31dp"
        android:foreground="@android:drawable/ic_menu_add"
        android:text="New Food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/popupImageView"
        android:layout_width="66dp"
        android:layout_height="61dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="24dp"
        android:foreground="@android:drawable/ic_menu_sort_by_size"
        android:text="Menu"
        app:layout_constraintBottom_toTopOf="@+id/foodRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>